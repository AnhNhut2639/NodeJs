extends ../layouts/common
block content
    h1 Add city you want to come in Viet Nam
    if erorrs 
        each erorr in erorrs 
            .alert.alert-warning= erorr 

    form(action="/city/create",method="POST", enctype="multipart/form-data")
        .form-group
        label(for="name") City
        input#name.form-control(type="text",name ="name", value=values ? values.name : "")

        .form-group
        label(for="phone") Contact
        input#phone.form-control(type="text",name ="phone",value=values ? values.phone : "")

        .form-group
         label(for="avatar") Avatar
         input#avatar.form-control-file(name="avatar",type="file")



        button.btn.btn-info.mt-2 Add